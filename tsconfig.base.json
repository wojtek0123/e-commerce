{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@e-commerce/client-web-app/browsing/data-access": [
        "libs/client-web-app/browsing/data-access/src/index.ts"
      ],
      "@e-commerce/client-web-app/browsing/feature-add-product": [
        "libs/client-web-app/browsing/feature-add-product/src/index.ts"
      ],
      "@e-commerce/client-web-app/browsing/feature-product": [
        "libs/client-web-app/browsing/feature-product/src/index.ts"
      ],
      "@e-commerce/client-web-app/browsing/feature-products": [
        "libs/client-web-app/browsing/feature-products/src/index.ts"
      ],
      "@e-commerce/client-web-app/shared/api-types": [
        "libs/client-web-app/shared/api-types/src/index.ts"
      ],
      "@e-commerce/shared/data-access": ["libs/shared/data-access/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
