      ],
      "@e-commerce/client-web-app/products/feature-add-product": [
        "libs/client-web-app/products/feature-add-product/src/index.ts"
      ],
      "@e-commerce/client-web-app/products/feature-home": [
        "libs/client-web-app/products/feature-home/src/index.ts"
      ],
      "@e-commerce/client-web-app/products/feature-product": [
        "libs/client-web-app/products/feature-product/src/index.ts"
      ],
      "@e-commerce/client-web-app/products/feature-products": [
        "libs/client-web-app/products/feature-products/src/index.ts"
      ],
      "@e-commerce/client-web-app/shared/api-types": [
        "libs/client-web-app/shared/api-types/src/index.ts"
      ],
      "@e-commerce/server/publishers": ["libs/server/publishers/src/index.ts"],
      "@e-commerce/shared/data-access": ["libs/shared/data-access/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
