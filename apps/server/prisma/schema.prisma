// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String  @id @default(uuid())
  name        String
  description String
  price       Decimal
}

model User {
  id           String @id @default(uuid())
  name         String
  surname      String
  email        String
  phone        String
  city         String
  Street       String
  house_number String
  home_number  String
}
